    input(id="apiendpoint" hidden value="#{socketurl}")

    script(type="text/javascript" src="/socket.io/socket.io.js")
    script(type="text/javascript" src="/javascripts/jscookie.js")
    script(type="text/javascript" src="/javascripts/tooltip.js")
    script(type="text/javascript" src="/javascripts/game.js")